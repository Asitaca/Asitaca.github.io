function App() {

  const onSubmit = () =&gt; {
    alert('submitted'); 

  };

  const onKeyUp = (event) =&gt; {
    if (event.keyCode === 13) {
    onSubmit();
    };
  }

  let text = 'Kossie';

  const updateText = () =&gt; {
    text = 'Coder';
    console.log(text);

  }
 
  return (
    &lt;div className="App"&gt;
      &lt;input onKeyUp={onKeyUp}/&gt;
      &lt;button onClick={onSubmit}&gt;Submit
      &lt;/button&gt;
  

    &lt;br /&gt;&lt;br /&gt;

    &lt;span&gt;{text}&lt;/span&gt;
    &lt;button onClick={updateText}&gt;Update&lt;/button&gt; 
    &lt;/div&gt;
  );
}

export default App;
